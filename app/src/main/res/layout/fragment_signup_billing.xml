<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/billing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2A394E">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_back" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="@string/auth_title_CoordiKids"
                        android:textSize="40sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollableContents"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/header"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Billing Details"
                            android:textColor="#2A394E"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_step"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:text="Step 3/3"
                            android:textColor="#9A3859B2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Country/Region *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_billing_region"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="House number *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_payment_house_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Street Address *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_payment_street_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Suburb *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_payment_suburb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="State *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_payment_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:text="Postcode *"
                            android:textColor="#113859" />

                        <EditText
                            android:id="@+id/edt_payment_postcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="25dp"
                            android:background="@drawable/bg_auth_textview"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black" />

                        <CheckBox
                            android:id="@+id/checkbox_terms_conditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="I agree to terms &amp; Conditions"
                            android:textColor="#31444A" />

                        <CheckBox
                            android:id="@+id/checkbox_subscribe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Subscribe to Coordikids news"
                            android:textColor="#31444A" />

                        <FrameLayout
                            android:id="@+id/btn_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="30dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/btn_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Proceed to Paypal"
                                android:textAppearance="@style/start_free_" />

                        </FrameLayout>

                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>